Program1:
let days = prompt("Enter the day")
         switch(days){
            case 'monday':
            case 'tuesday':
            case 'wednesday':
            case 'thursday':
                console.log("it is a week day");
                document.write("it is a week day");
                break;
            case 'friday':
            case 'saturday':
            case 'sunday':
                console.log("it is weekend");
                document.write("it is weekend");
            default:
            console.log("invalid day");
            document.write("invalid day");

         }
